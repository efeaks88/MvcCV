@using MvcCV.Models.Entity
@model List<Tbliletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ bool okundu_mu = false;}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                        if (okundu_mu == false)
                                        {
                                            <!-- timeline time label -->
                                            <div class="time-label">
                                                <span class="bg-info">
                                                    @(((DateTime)item.Tarih).ToString("dd-MM-yyyy"))
                                                </span>
                                            </div>

                                            <div>
                                                <i class="fas fa-comments bg-warning"></i>
                                                <div class="timeline-item">
                                                    <span class="time"><i class="far fa-clock"></i> @item.Mail</span>
                                                    <h3 class="timeline-header"><a href="#">@item.Adsoyad</a> - @item.Konu</h3>

                                                    <div class="timeline-body">
                                                        @item.Mesaj

                                                    </div>
                                                    <button class="btn btn-warning" onclick="@okundu_mu=true;">Okundu Olarak İşaretle</button>
                                                </div>

                                            </div>

                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
    </section>
</body>
</html>

